{
    "presets": [
        ["@babel/preset-env", {
            "targets": {
                "browsers": [
                    "Chrome >= 60",
                    "Safari >= 10.1",
                    "iOS >= 10.3",
                    "Firefox >= 54",
                    "Edge >= 15"
                ]
            }
        }]
    ],
    "env": {
        "test": {
            "plugins": [
                ["istanbul", {
                    "exclude": [
                        "**/*.test.*",
                        "test/**"
                    ]
                }]
            ]
        }
    }
}
